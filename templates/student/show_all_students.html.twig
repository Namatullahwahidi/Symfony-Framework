{% extends 'index.html.twig' %}

{% block body %}

    <a href="{{ path('newstudentform') }}" class="btn btn-primary" role="button">Insert New Drink</a>
    <table class="table table-hover table-bordered table-striped mb-0">
        <thead class="bg-success">
        <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Company</th>
            <th scope="col">Amount</th>
            <th scope="col">show</th>
        </tr>
        </thead>
        <tbody class="tb-info">
        {% for student in students %}
                        <tr>
                            <td>{{ student.id }}</td>
                            <td>{{ student.name }}</td>
                            <td>{{ student.price }}</td>
                            <td>{{ student.company }}</td>
                            <td>{{ student.amount }}</td>
                                                        <td>
                                <a href="{{ path('updatestudentform', {'id': student.id}) }}"
                                    class="btn btn-primary" role="button">Update</a>
                                <a href="{{ path('deletestudent', {'id': student.id}) }}"
                                   class="btn btn-danger" role="button">Del</a>
                            </td>

                        </tr>

        {% endfor %}




        </tbody>
    </table>


{% endblock %}